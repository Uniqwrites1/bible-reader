{"translation":{"id":"hau_bib","name":"Biblica® Buɗaɗɗen Littafi Mai Tsarki, Sabon Rai Don Kowa™","website":"https://ebible.org/Scriptures/details.php?id=hausa","licenseUrl":"https://ebible.org/Scriptures/details.php?id=hausa","licenseNotes":null,"shortName":"BIB","englishName":"BIB","language":"hau","textDirection":"ltr","sha256":"1b8a05f416dbac0c501e6beb07f07c70cb9426ebc400eb38e985e24f03b39c5b","availableFormats":["json"],"listOfBooksApiLink":"/api/hau_bib/books.json","numberOfBooks":65,"totalNumberOfChapters":1177,"totalNumberOfVerses":30730,"languageName":"Hausa","languageEnglishName":"Hausa"},"book":{"id":"PSA","translationId":"hau_bib","name":"Zabura","commonName":"Zabura","title":"Zabura","order":19,"numberOfChapters":150,"sha256":"5b5f072f00cf74f6fe6699dcc47837bda244f9638022807dbe29c268e9e3a2c9","firstChapterApiLink":"/api/hau_bib/PSA/1.json","lastChapterApiLink":"/api/hau_bib/PSA/150.json","totalNumberOfVerses":2461},"chapter":{"number":43,"content":[{"type":"verse","number":1,"content":[{"text":"Ka nuna ni marar laifi ne, ya Allah,","poem":1},{"text":"ka kuma nemi hakkina","poem":2},{"lineBreak":true},{"text":"a kan al’ummai marasa sanin Allah.","poem":2},{"text":"Ka kuɓutar da ni daga","poem":1},{"text":"masu ruɗu da mugayen mutane.","poem":2}]},{"type":"verse","number":2,"content":[{"text":"Kai ne Allah mafakata.","poem":1},{"text":"Me ya sa ka ƙi ni?","poem":2},{"text":"Me zai sa in yi ta yawo ina makoki,","poem":1},{"text":"a danne a hannun abokin gāba?","poem":2}]},{"type":"verse","number":3,"content":[{"text":"Ka aiko da haskenka da gaskiyarka,","poem":1},{"text":"bari su bishe ni","poem":2},{"text":"bari su kawo ni ga dutsenka mai tsarki,","poem":1},{"text":"zuwa wurin da kake zama.","poem":2}]},{"type":"verse","number":4,"content":[{"text":"Sa’an nan zan tafi bagaden Allah,","poem":1},{"text":"ga Allah, farin cikina da murnata.","poem":2},{"text":"Zan yabe ka da garaya,","poem":1},{"text":"Ya Allah, Allahna.","poem":2}]},{"type":"line_break"},{"type":"verse","number":5,"content":[{"text":"Me ya sa kake baƙin ciki, ya raina?","poem":1},{"text":"Me ya sa ka damu a cikina?","poem":2},{"text":"Ka dogara ga Allah,","poem":1},{"text":"gama zai sāke yabe shi,","poem":2},{"lineBreak":true},{"text":"Mai Cetona da Allahna.","poem":2}]}],"footnotes":[]},"thisChapterLink":"/api/hau_bib/PSA/43.json","thisChapterAudioLinks":{},"nextChapterApiLink":"/api/hau_bib/PSA/44.json","nextChapterAudioLinks":{},"previousChapterApiLink":"/api/hau_bib/PSA/42.json","previousChapterAudioLinks":{},"numberOfVerses":5}