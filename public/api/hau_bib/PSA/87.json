umber":6,"content":[{"text":"Ubangiji zai rubuta a littafin sunayen mutanensa,","poem":1},{"text":"“An haifi wannan a Sihiyona.” Sela","poem":2}]},{"type":"line_break"},{"type":"verse","number":7,"content":[{"text":"Yayinda suke kaɗe-kaɗe za su rera,","poem":1},{"text":"“Dukan maɓulɓulaina suna cikinki.”","poem":2}]}],"footnotes":[]},"thisChapterLink":"/api/hau_bib/PSA/87.json","thisChapterAudioLinks":{},"nextChapterApiLink":"/api/hau_bib/PSA/88.json","nextChapterAudioLinks":{},"previousChapterApiLink":"/api/hau_bib/PSA/86.json","previousChapterAudioLinks":{},"numberOfVerses":7}