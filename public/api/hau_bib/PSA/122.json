{"translation":{"id":"hau_bib","name":"Biblica® Buɗaɗɗen Littafi Mai Tsarki, Sabon Rai Don Kowa™","website":"https://ebible.org/Scriptures/details.php?id=hausa","licenseUrl":"https://ebible.org/Scriptures/details.php?id=hausa","licenseNotes":null,"shortName":"BIB","englishName":"BIB","language":"hau","textDirection":"ltr","sha256":"1b8a05f416dbac0c501e6beb07f07c70cb9426ebc400eb38e985e24f03b39c5b","availableFormats":["json"],"listOfBooksApiLink":"/api/hau_bib/books.json","numberOfBooks":65,"totalNumberOfChapters":1177,"totalNumberOfVerses":30730,"languageName":"Hausa","languageEnglishName":"Hausa"},"book":{"id":"PSA","translationId":"hau_bib","name":"Zabura","commonName":"Zabura","title":"Zabura","order":19,"numberOfChapters":150,"sha256":"5b5f072f00cf74f6fe6699dcc47837bda244f9638022807dbe29c268e9e3a2c9","firstChapterApiLink":"/api/hau_bib/PSA/1.json","lastChapterApiLink":"/api/hau_bib/PSA/150.json","totalNumberOfVerses":2461},"chapter":{"number":122,"content":[{"type":"hebrew_subtitle","content":["Waƙar haurawa. Ta Dawuda."]},{"type":"verse","number":1,"content":[{"text":"Na yi farin ciki tare da waɗanda suka ce da ni,","poem":1},{"text":"“Bari mu tafi gidan Ubangiji.”","poem":2}]},{"type":"verse","number":2,"content":[{"text":"Ƙafafunmu suna tsaye","poem":1},{"text":"a ƙofofinki, ya Urushalima.","poem":2}]},{"type":"line_break"},{"type":"verse","number":3,"content":[{"text":"An gina Urushalima kamar birnin","poem":1},{"text":"da aka yi a harhaɗe wuri guda.","poem":2}]},{"type":"verse","number":4,"content":[{"text":"A can ne kabilu suke haurawa,","poem":1},{"text":"kabilan Ubangiji,","poem":2},{"text":"don su yabi sunan Ubangiji","poem":1},{"text":"bisa ga farillan da aka ba wa Isra’ila.","poem":2}]},{"type":"verse","number":5,"content":[{"text":"A can kursiyoyin shari’a yake tsaye,","poem":1},{"text":"kursiyoyin gidan Dawuda.","poem":2}]},{"type":"line_break"},{"type":"verse","number":6,"content":[{"text":"Ku yi addu’a don salamar Urushalima,","poem":1},{"text":"“Bari waɗanda suke ƙaunarki su zauna lafiya.","poem":2}]},{"type":"verse","number":7,"content":[{"text":"Bari salama ta kasance a katangarki","poem":1},{"text":"zaman lafiya kuma a fadodinki.”","poem":2}]},{"type":"verse","number":8,"content":[{"text":"Saboda ’yan’uwana da kuma abokaina,","poem":1},{"text":"zan ce, “Salama tă kasance tare da ke.”","poem":2}]},{"type":"verse","number":9,"content":[{"text":"Saboda gidan Ubangiji Allahnmu,","poem":1},{"text":"zan nemi wadatarki.","poem":2}]}],"footnotes":[]},"thisChapterLink":"/api/hau_bib/PSA/122.json","thisChapterAudioLinks":{},"nextChapterApiLink":"/api/hau_bib/PSA/123.json","nextChapterAudioLinks":{},"previousChapterApiLink":"/api/hau_bib/PSA/121.json","previousChapterAudioLinks":{},"numberOfVerses":9}