{"translation":{"id":"eng_abt","name":"American Standard Version Byzantine Text","website":"https://ebible.org/Scriptures/details.php?id=engasvbt","licenseUrl":"https://ebible.org/Scriptures/details.php?id=engasvbt","licenseNotes":null,"shortName":"ABT","englishName":"American Standard Version Byzantine Text","language":"eng","textDirection":"ltr","sha256":"75dee28c05837f87b0433a8f9eb6e00ed7393b18446e492fa08e3457eadcd50d","availableFormats":["json"],"listOfBooksApiLink":"/api/eng_abt/books.json","numberOfBooks":66,"totalNumberOfChapters":1189,"totalNumberOfVerses":31098,"languageName":"English","languageEnglishName":"English"},"book":{"id":"JOB","translationId":"eng_abt","name":"Job","commonName":"Job","title":"THE BOOK OF JOB","order":18,"numberOfChapters":42,"sha256":"833b3ce451825e15d48c8291caf528a48700e70daaf991d2cce3a7b30f7fe834","firstChapterApiLink":"/api/eng_abt/JOB/1.json","lastChapterApiLink":"/api/eng_abt/JOB/42.json","totalNumberOfVerses":1070},"chapter":{"number":17,"content":[{"type":"verse","number":1,"content":[{"text":"My spirit is consumed, my days are extinct,","poem":1},{"lineBreak":true},{"text":"The grave is ready for me.","poem":1}]},{"type":"verse","number":2,"content":[{"lineBreak":true},{"text":"Surely there are mockers with me,","poem":1},{"lineBreak":true},{"text":"And mine eye dwelleth upon their provocation.","poem":1}]},{"type":"line_break"},{"type":"verse","number":3,"content":[{"text":"Give now a pledge, be surety for me with thyself;","poem":1},{"lineBreak":true},{"text":"Who is there that will strike hands with me?","poem":1}]},{"type":"verse","number":4,"content":[{"lineBreak":true},{"text":"For thou hast hidden their heart from understanding:","poem":1},{"lineBreak":true},{"text":"Therefore shalt thou not exalt them.","poem":1}]},{"type":"verse","number":5,"content":[{"lineBreak":true},{"text":"He that denounceth his friends for a prey,","poem":1},{"lineBreak":true},{"text":"Even the eyes of his children shall fail.","poem":1}]},{"type":"line_break"},{"type":"verse","number":6,"content":[{"text":"But he hath made me a byword of the people;","poem":2},{"text":"And they spit in my face.","poem":1}]},{"type":"verse","number":7,"content":[{"lineBreak":true},{"text":"Mine eye also is dim by reason of sorrow,","poem":1},{"lineBreak":true},{"text":"And all my members are as a shadow.","poem":1}]},{"type":"verse","number":8,"content":[{"lineBreak":true},{"text":"Upright men shall be astonished at this,","poem":1},{"lineBreak":true},{"text":"And the innocent shall stir up himself against the godless.","poem":1}]},{"type":"verse","number":9,"content":[{"lineBreak":true},{"text":"Yet shall the righteous hold on his way,","poem":1},{"lineBreak":true},{"text":"And he that hath clean hands shall wax stronger and stronger.","poem":1}]},{"type":"verse","number":10,"content":[{"lineBreak":true},{"text":"But as for you all, come on now again;","poem":1},{"lineBreak":true},{"text":"And I shall not find a wise man among you.","poem":1}]},{"type":"verse","number":11,"content":[{"lineBreak":true},{"text":"My days are past, my purposes are broken off,","poem":1},{"lineBreak":true},{"text":"Even the thoughts of my heart.","poem":1}]},{"type":"verse","number":12,"content":[{"lineBreak":true},{"text":"They change the night into day:","poem":1},{"lineBreak":true},{"text":"The light, say they, is near unto the darkness.","poem":1}]},{"type":"verse","number":13,"content":[{"lineBreak":true},{"text":"If I look for Sheol as my house;","poem":1},{"lineBreak":true},{"text":"If I have spread my couch in the darkness;","poem":1}]},{"type":"verse","number":14,"content":[{"lineBreak":true},{"text":"If I have said to corruption, Thou art my father;","poem":1},{"lineBreak":true},{"text":"To the worm, Thou art my mother, and my sister;","poem":1}]},{"type":"verse","number":15,"content":[{"lineBreak":true},{"text":"Where then is my hope?","poem":1},{"lineBreak":true},{"text":"And as for my hope, who shall see it?","poem":1}]},{"type":"verse","number":16,"content":[{"lineBreak":true},{"text":"It shall go down to the bars of Sheol,","poem":1},{"lineBreak":true},{"text":"When once there is rest in the dust.","poem":1}]},{"type":"line_break"}],"footnotes":[]},"thisChapterLink":"/api/eng_abt/JOB/17.json","thisChapterAudioLinks":{},"nextChapterApiLink":"/api/eng_abt/JOB/18.json","nextChapterAudioLinks":{},"previousChapterApiLink":"/api/eng_abt/JOB/16.json","previousChapterAudioLinks":{},"numberOfVerses":16}