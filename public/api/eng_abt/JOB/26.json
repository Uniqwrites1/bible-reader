{"translation":{"id":"eng_abt","name":"American Standard Version Byzantine Text","website":"https://ebible.org/Scriptures/details.php?id=engasvbt","licenseUrl":"https://ebible.org/Scriptures/details.php?id=engasvbt","licenseNotes":null,"shortName":"ABT","englishName":"American Standard Version Byzantine Text","language":"eng","textDirection":"ltr","sha256":"75dee28c05837f87b0433a8f9eb6e00ed7393b18446e492fa08e3457eadcd50d","availableFormats":["json"],"listOfBooksApiLink":"/api/eng_abt/books.json","numberOfBooks":66,"totalNumberOfChapters":1189,"totalNumberOfVerses":31098,"languageName":"English","languageEnglishName":"English"},"book":{"id":"JOB","translationId":"eng_abt","name":"Job","commonName":"Job","title":"THE BOOK OF JOB","order":18,"numberOfChapters":42,"sha256":"833b3ce451825e15d48c8291caf528a48700e70daaf991d2cce3a7b30f7fe834","firstChapterApiLink":"/api/eng_abt/JOB/1.json","lastChapterApiLink":"/api/eng_abt/JOB/42.json","totalNumberOfVerses":1070},"chapter":{"number":26,"content":[{"type":"verse","number":1,"content":["Then Job answered and said,"]},{"type":"verse","number":2,"content":[{"text":"How hast thou helped him that is without power!","poem":1},{"lineBreak":true},{"text":"How hast thou saved the arm that hath no strength!","poem":1}]},{"type":"verse","number":3,"content":[{"lineBreak":true},{"text":"How hast thou counseled him that hath no wisdom,","poem":1},{"lineBreak":true},{"text":"And plentifully declared sound knowledge!","poem":1}]},{"type":"verse","number":4,"content":[{"lineBreak":true},{"text":"To whom hast thou uttered words?","poem":1},{"lineBreak":true},{"text":"And whose spirit came forth from thee?","poem":1}]},{"type":"line_break"},{"type":"verse","number":5,"content":[{"text":"They that are deceased tremble","poem":1},{"lineBreak":true},{"text":"Beneath the waters and the inhabitants thereof.","poem":1}]},{"type":"verse","number":6,"content":[{"lineBreak":true},{"text":"Sheol is naked before God,","poem":1},{"lineBreak":true},{"text":"And Abaddon hath no covering.","poem":1}]},{"type":"verse","number":7,"content":[{"lineBreak":true},{"text":"He stretcheth out the north over empty space,","poem":1},{"lineBreak":true},{"text":"And hangeth the earth upon nothing.","poem":1}]},{"type":"verse","number":8,"content":[{"lineBreak":true},{"text":"He bindeth up the waters in his thick clouds;","poem":1},{"lineBreak":true},{"text":"And the cloud is not rent under them.","poem":1}]},{"type":"verse","number":9,"content":[{"lineBreak":true},{"text":"He encloseth the face of his throne,","poem":1},{"lineBreak":true},{"text":"And spreadeth his cloud upon it.","poem":1}]},{"type":"verse","number":10,"content":[{"lineBreak":true},{"text":"He hath described a boundary upon the face of the waters,","poem":1},{"lineBreak":true},{"text":"Unto the confines of light and darkness.","poem":1}]},{"type":"verse","number":11,"content":[{"lineBreak":true},{"text":"The pillars of heaven tremble","poem":1},{"lineBreak":true},{"text":"And are astonished at his rebuke.","poem":1}]},{"type":"verse","number":12,"content":[{"lineBreak":true},{"text":"He stirreth up the sea with his power,","poem":1},{"lineBreak":true},{"text":"And by his understanding he smiteth through Rahab.","poem":1}]},{"type":"verse","number":13,"content":[{"lineBreak":true},{"text":"By his Spirit the heavens are garnished;","poem":1},{"lineBreak":true},{"text":"His hand hath pierced the swift serpent.","poem":1}]},{"type":"verse","number":14,"content":[{"lineBreak":true},{"text":"Lo, these are but the outskirts of his ways:","poem":1},{"lineBreak":true},{"text":"And how small a whisper do we hear of him!","poem":1},{"lineBreak":true},{"text":"But the thunder of his power who can understand?","poem":1}]},{"type":"line_break"}],"footnotes":[]},"thisChapterLink":"/api/eng_abt/JOB/26.json","thisChapterAudioLinks":{},"nextChapterApiLink":"/api/eng_abt/JOB/27.json","nextChapterAudioLinks":{},"previousChapterApiLink":"/api/eng_abt/JOB/25.json","previousChapterAudioLinks":{},"numberOfVerses":14}