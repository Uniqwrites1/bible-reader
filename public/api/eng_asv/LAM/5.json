{"translation":{"id":"eng_asv","name":"American Standard Version (1901)","website":"https://ebible.org/Scriptures/details.php?id=eng-asv","licenseUrl":"https://ebible.org/Scriptures/details.php?id=eng-asv","licenseNotes":null,"shortName":"ASV","englishName":"American Standard Version (1901)","language":"eng","textDirection":"ltr","sha256":"975f156c32676f334a42b0d3ac7178eac1ed270608244b56aad7cb385c04bb67","availableFormats":["json"],"listOfBooksApiLink":"/api/eng_asv/books.json","numberOfBooks":66,"totalNumberOfChapters":1189,"totalNumberOfVerses":31102,"languageName":"English","languageEnglishName":"English"},"book":{"id":"LAM","translationId":"eng_asv","name":"Lamentations","commonName":"Lamentations","title":"THE LAMENTATIONS OF JEREMIAH","order":25,"numberOfChapters":5,"sha256":"718c4879e0b885b9bbf488f0fe7a3053e6e85de597de440b32e63ece6d020cb5","firstChapterApiLink":"/api/eng_asv/LAM/1.json","lastChapterApiLink":"/api/eng_asv/LAM/5.json","totalNumberOfVerses":154},"chapter":{"number":5,"content":[{"type":"verse","number":1,"content":[{"text":"Remember, O Jehovah, what is come upon us:","poem":1},{"lineBreak":true},{"text":"Behold, and see our reproach.","poem":1}]},{"type":"verse","number":2,"content":[{"lineBreak":true},{"text":"Our inheritance is turned unto strangers,","poem":1},{"lineBreak":true},{"text":"Our houses unto aliens.","poem":1}]},{"type":"verse","number":3,"content":[{"lineBreak":true},{"text":"We are orphans and fatherless;","poem":1},{"lineBreak":true},{"text":"Our mothers are as widows.","poem":1}]},{"type":"verse","number":4,"content":[{"lineBreak":true},{"text":"We have drunken our water for money;","poem":1},{"lineBreak":true},{"text":"Our wood is sold unto us.","poem":1}]},{"type":"verse","number":5,"content":[{"lineBreak":true},{"text":"Our pursuers are upon our necks:","poem":1},{"lineBreak":true},{"text":"We are weary, and have no rest.","poem":1}]},{"type":"verse","number":6,"content":[{"lineBreak":true},{"text":"We have given the hand to the Egyptians,","poem":1},{"lineBreak":true},{"text":"And to the Assyrians, to be satisfied with bread.","poem":1}]},{"type":"verse","number":7,"content":[{"lineBreak":true},{"text":"Our fathers sinned, and are not;","poem":1},{"lineBreak":true},{"text":"And we have borne their iniquities.","poem":1}]},{"type":"verse","number":8,"content":[{"lineBreak":true},{"text":"Servants rule over us:","poem":1},{"lineBreak":true},{"text":"There is none to deliver us out of their hand.","poem":1}]},{"type":"verse","number":9,"content":[{"lineBreak":true},{"text":"We get our bread at the peril of our lives,","poem":1},{"lineBreak":true},{"text":"Because of the sword of the wilderness.","poem":1}]},{"type":"verse","number":10,"content":[{"lineBreak":true},{"text":"Our skin is black like an oven,","poem":1},{"lineBreak":true},{"text":"Because of the burning heat of famine.","poem":1}]},{"type":"verse","number":11,"content":[{"lineBreak":true},{"text":"They ravished the women in Zion,","poem":1},{"lineBreak":true},{"text":"The virgins in the cities of Judah.","poem":1}]},{"type":"verse","number":12,"content":[{"lineBreak":true},{"text":"Princes were hanged up by their hand:","poem":1},{"lineBreak":true},{"text":"The faces of elders were not honored.","poem":1}]},{"type":"verse","number":13,"content":[{"lineBreak":true},{"text":"The young men bare the mill;","poem":1},{"lineBreak":true},{"text":"And the children stumbled under the wood.","poem":1}]},{"type":"verse","number":14,"content":[{"lineBreak":true},{"text":"The elders have ceased from the gate,","poem":1},{"lineBreak":true},{"text":"The young men from their music.","poem":1}]},{"type":"verse","number":15,"content":[{"lineBreak":true},{"text":"The joy of our heart is ceased;","poem":1},{"lineBreak":true},{"text":"Our dance is turned into mourning.","poem":1}]},{"type":"verse","number":16,"content":[{"lineBreak":true},{"text":"The crown is fallen from our head:","poem":1},{"lineBreak":true},{"text":"Woe unto us! for we have sinned.","poem":1}]},{"type":"verse","number":17,"content":[{"lineBreak":true},{"text":"For this our heart is faint;","poem":1},{"lineBreak":true},{"text":"For these things our eyes are dim;","poem":1}]},{"type":"verse","number":18,"content":[{"lineBreak":true},{"text":"For the mountain of Zion, which is desolate:","poem":1},{"lineBreak":true},{"text":"The foxes walk upon it.","poem":1}]},{"type":"line_break"},{"type":"verse","number":19,"content":[{"text":"Thou, O Jehovah, abidest for ever;","poem":1},{"lineBreak":true},{"text":"Thy throne is from generation to generation.","poem":1}]},{"type":"verse","number":20,"content":[{"lineBreak":true},{"text":"Wherefore dost thou forget us for ever,","poem":1},{"lineBreak":true},{"text":"And forsake us so long time?","poem":1}]},{"type":"verse","number":21,"content":[{"lineBreak":true},{"text":"Turn thou us unto thee, O Jehovah, and we shall be turned;","poem":1},{"lineBreak":true},{"text":"Renew our days as of old.","poem":1}]},{"type":"verse","number":22,"content":[{"lineBreak":true},{"text":"But thou hast utterly rejected us;","poem":1},{"lineBreak":true},{"text":"Thou art very wroth against us.","poem":1}]}],"footnotes":[]},"thisChapterLink":"/api/eng_asv/LAM/5.json","thisChapterAudioLinks":{},"nextChapterApiLink":"/api/eng_asv/EZK/1.json","nextChapterAudioLinks":{},"previousChapterApiLink":"/api/eng_asv/LAM/4.json","previousChapterAudioLinks":{},"numberOfVerses":22}