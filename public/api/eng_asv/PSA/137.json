{"translation":{"id":"eng_asv","name":"American Standard Version (1901)","website":"https://ebible.org/Scriptures/details.php?id=eng-asv","licenseUrl":"https://ebible.org/Scriptures/details.php?id=eng-asv","licenseNotes":null,"shortName":"ASV","englishName":"American Standard Version (1901)","language":"eng","textDirection":"ltr","sha256":"975f156c32676f334a42b0d3ac7178eac1ed270608244b56aad7cb385c04bb67","availableFormats":["json"],"listOfBooksApiLink":"/api/eng_asv/books.json","numberOfBooks":66,"totalNumberOfChapters":1189,"totalNumberOfVerses":31102,"languageName":"English","languageEnglishName":"English"},"book":{"id":"PSA","translationId":"eng_asv","name":"Psalms","commonName":"Psalms","title":"THE PSALMS","order":19,"numberOfChapters":150,"sha256":"80f14d6a9ef01b59b2d1f7614ff34b68b5ac4ce1c805f073965dd07ddf9d580f","firstChapterApiLink":"/api/eng_asv/PSA/1.json","lastChapterApiLink":"/api/eng_asv/PSA/150.json","totalNumberOfVerses":2461},"chapter":{"number":137,"content":[{"type":"verse","number":1,"content":[{"text":"By the rivers of Babylon,","poem":1},{"lineBreak":true},{"text":"There we sat down, yea, we wept,","poem":1},{"lineBreak":true},{"text":"When we remembered Zion.","poem":1}]},{"type":"verse","number":2,"content":[{"lineBreak":true},{"text":"Upon the willows in the midst thereof","poem":1},{"lineBreak":true},{"text":"We hanged up our harps.","poem":1}]},{"type":"verse","number":3,"content":[{"lineBreak":true},{"text":"For there they that led us captive required of us songs,","poem":1},{"lineBreak":true},{"text":"And they that wasted us required of us mirth, saying,","poem":1},{"lineBreak":true},{"text":"Sing us one of the songs of Zion.","poem":1}]},{"type":"verse","number":4,"content":[{"lineBreak":true},{"text":"How shall we sing Jehovahâ€™s song","poem":1},{"lineBreak":true},{"text":"In a foreign land?","poem":1}]},{"type":"verse","number":5,"content":[{"lineBreak":true},{"text":"If I forget thee, O Jerusalem,","poem":1},{"lineBreak":true},{"text":"Let my right hand forget her skill.","poem":1}]},{"type":"verse","number":6,"content":[{"lineBreak":true},{"text":"Let my tongue cleave to the roof of my mouth,","poem":1},{"lineBreak":true},{"text":"If I remember thee not;","poem":1},{"lineBreak":true},{"text":"If I prefer not Jerusalem","poem":1},{"lineBreak":true},{"text":"Above my chief joy.","poem":1}]},{"type":"verse","number":7,"content":[{"lineBreak":true},{"text":"Remember, O Jehovah, against the children of Edom","poem":1},{"lineBreak":true},{"text":"The day of Jerusalem;","poem":1},{"lineBreak":true},{"text":"Who said, Rase it, rase it,","poem":1},{"lineBreak":true},{"text":"Even to the foundation thereof.","poem":1}]},{"type":"verse","number":8,"content":[{"lineBreak":true},{"text":"O daughter of Babylon, that art to be destroyed,","poem":1},{"lineBreak":true},{"text":"Happy shall he be, that rewardeth thee","poem":1},{"lineBreak":true},{"text":"As thou hast served us.","poem":1}]},{"type":"verse","number":9,"content":[{"lineBreak":true},{"text":"Happy shall he be, that taketh and dasheth thy little ones","poem":1},{"lineBreak":true},{"text":"Against the rock.","poem":1}]}],"footnotes":[]},"thisChapterLink":"/api/eng_asv/PSA/137.json","thisChapterAudioLinks":{},"nextChapterApiLink":"/api/eng_asv/PSA/138.json","nextChapterAudioLinks":{},"previousChapterApiLink":"/api/eng_asv/PSA/136.json","previousChapterAudioLinks":{},"numberOfVerses":9}