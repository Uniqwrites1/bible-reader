{"translation":{"id":"eng_asv","name":"American Standard Version (1901)","website":"https://ebible.org/Scriptures/details.php?id=eng-asv","licenseUrl":"https://ebible.org/Scriptures/details.php?id=eng-asv","licenseNotes":null,"shortName":"ASV","englishName":"American Standard Version (1901)","language":"eng","textDirection":"ltr","sha256":"975f156c32676f334a42b0d3ac7178eac1ed270608244b56aad7cb385c04bb67","availableFormats":["json"],"listOfBooksApiLink":"/api/eng_asv/books.json","numberOfBooks":66,"totalNumberOfChapters":1189,"totalNumberOfVerses":31102,"languageName":"English","languageEnglishName":"English"},"book":{"id":"PSA","translationId":"eng_asv","name":"Psalms","commonName":"Psalms","title":"THE PSALMS","order":19,"numberOfChapters":150,"sha256":"80f14d6a9ef01b59b2d1f7614ff34b68b5ac4ce1c805f073965dd07ddf9d580f","firstChapterApiLink":"/api/eng_asv/PSA/1.json","lastChapterApiLink":"/api/eng_asv/PSA/150.json","totalNumberOfVerses":2461},"chapter":{"number":2,"content":[{"type":"verse","number":1,"content":[{"text":"Why do the nations rage,","poem":1},{"lineBreak":true},{"text":"And the peoples meditate a vain thing?","poem":1}]},{"type":"verse","number":2,"content":[{"lineBreak":true},{"text":"The kings of the earth set themselves,","poem":1},{"lineBreak":true},{"text":"And the rulers take counsel together,","poem":1},{"lineBreak":true},{"text":"Against Jehovah, and against his anointed, saying,","poem":1}]},{"type":"verse","number":3,"content":[{"lineBreak":true},{"text":"Let us break their bonds asunder,","poem":1},{"lineBreak":true},{"text":"And cast away their cords from us.","poem":1}]},{"type":"verse","number":4,"content":[{"lineBreak":true},{"text":"He that sitteth in the heavens will laugh:","poem":1},{"lineBreak":true},{"text":"The Lord will have them in derision.","poem":1}]},{"type":"verse","number":5,"content":[{"lineBreak":true},{"text":"Then will he speak unto them in his wrath,","poem":1},{"lineBreak":true},{"text":"And vex them in his sore displeasure:","poem":1}]},{"type":"verse","number":6,"content":[{"lineBreak":true},{"text":"Yet I have set my king","poem":1},{"lineBreak":true},{"text":"Upon my holy hill of Zion.","poem":1}]},{"type":"line_break"},{"type":"verse","number":7,"content":[{"text":"I will tell of the decree:","poem":1},{"lineBreak":true},{"text":"Jehovah said unto me, Thou art my son;","poem":1},{"lineBreak":true},{"text":"This day have I begotten thee.","poem":1}]},{"type":"verse","number":8,"content":[{"lineBreak":true},{"text":"Ask of me, and I will give thee the nations for thine inheritance,","poem":1},{"lineBreak":true},{"text":"And the uttermost parts of the earth for thy possession.","poem":1}]},{"type":"verse","number":9,"content":[{"lineBreak":true},{"text":"Thou shalt break them with a rod of iron;","poem":1},{"lineBreak":true},{"text":"Thou shalt dash them in pieces like a potterâ€™s vessel.","poem":1}]},{"type":"line_break"},{"type":"verse","number":10,"content":[{"text":"Now therefore be wise, O ye kings:","poem":1},{"lineBreak":true},{"text":"Be instructed, ye judges of the earth.","poem":1}]},{"type":"verse","number":11,"content":[{"lineBreak":true},{"text":"Serve Jehovah with fear,","poem":1},{"lineBreak":true},{"text":"And rejoice with trembling.","poem":1}]},{"type":"verse","number":12,"content":[{"lineBreak":true},{"text":"Kiss the son, lest he be angry, and ye perish in the way,","poem":1},{"lineBreak":true},{"text":"For his wrath will soon be kindled.","poem":1},{"lineBreak":true},{"text":"Blessed are all they that take refuge in him.","poem":1}]}],"footnotes":[]},"thisChapterLink":"/api/eng_asv/PSA/2.json","thisChapterAudioLinks":{},"nextChapterApiLink":"/api/eng_asv/PSA/3.json","nextChapterAudioLinks":{},"previousChapterApiLink":"/api/eng_asv/PSA/1.json","previousChapterAudioLinks":{},"numberOfVerses":12}