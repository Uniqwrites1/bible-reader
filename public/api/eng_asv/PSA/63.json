{"translation":{"id":"eng_asv","name":"American Standard Version (1901)","website":"https://ebible.org/Scriptures/details.php?id=eng-asv","licenseUrl":"https://ebible.org/Scriptures/details.php?id=eng-asv","licenseNotes":null,"shortName":"ASV","englishName":"American Standard Version (1901)","language":"eng","textDirection":"ltr","sha256":"975f156c32676f334a42b0d3ac7178eac1ed270608244b56aad7cb385c04bb67","availableFormats":["json"],"listOfBooksApiLink":"/api/eng_asv/books.json","numberOfBooks":66,"totalNumberOfChapters":1189,"totalNumberOfVerses":31102,"languageName":"English","languageEnglishName":"English"},"book":{"id":"PSA","translationId":"eng_asv","name":"Psalms","commonName":"Psalms","title":"THE PSALMS","order":19,"numberOfChapters":150,"sha256":"80f14d6a9ef01b59b2d1f7614ff34b68b5ac4ce1c805f073965dd07ddf9d580f","firstChapterApiLink":"/api/eng_asv/PSA/1.json","lastChapterApiLink":"/api/eng_asv/PSA/150.json","totalNumberOfVerses":2461},"chapter":{"number":63,"content":[{"type":"hebrew_subtitle","content":["A Psalm of David, when he was in the wilderness of Judah."]},{"type":"verse","number":1,"content":[{"text":"O God, thou art my God; earnestly will I seek thee:","poem":1},{"lineBreak":true},{"text":"My soul thirsteth for thee, my flesh longeth for thee,","poem":1},{"lineBreak":true},{"text":"In a dry and weary land, where no water is.","poem":1}]},{"type":"verse","number":2,"content":[{"lineBreak":true},{"text":"So have I looked upon thee in the sanctuary,","poem":1},{"lineBreak":true},{"text":"To see thy power and thy glory.","poem":1}]},{"type":"verse","number":3,"content":[{"lineBreak":true},{"text":"Because thy lovingkindness is better than life,","poem":1},{"lineBreak":true},{"text":"My lips shall praise thee.","poem":1}]},{"type":"verse","number":4,"content":[{"lineBreak":true},{"text":"So will I bless thee while I live:","poem":1},{"lineBreak":true},{"text":"I will lift up my hands in thy name.","poem":1}]},{"type":"verse","number":5,"content":[{"lineBreak":true},{"text":"My soul shall be satisfied as with marrow and fatness;","poem":1},{"lineBreak":true},{"text":"And my mouth shall praise thee with joyful lips;","poem":1}]},{"type":"verse","number":6,"content":[{"lineBreak":true},{"text":"When I remember thee upon my bed,","poem":1},{"lineBreak":true},{"text":"And meditate on thee in the night-watches.","poem":1}]},{"type":"verse","number":7,"content":[{"lineBreak":true},{"text":"For thou hast been my help,","poem":1},{"lineBreak":true},{"text":"And in the shadow of thy wings will I rejoice.","poem":1}]},{"type":"verse","number":8,"content":[{"lineBreak":true},{"text":"My soul followeth hard after thee:","poem":1},{"lineBreak":true},{"text":"Thy right hand upholdeth me.","poem":1}]},{"type":"verse","number":9,"content":[{"lineBreak":true},{"text":"But those that seek my soul, to destroy it,","poem":1},{"lineBreak":true},{"text":"Shall go into the lower parts of the earth.","poem":1}]},{"type":"verse","number":10,"content":[{"lineBreak":true},{"text":"They shall be given over to the power of the sword:","poem":1},{"lineBreak":true},{"text":"They shall be a portion for foxes.","poem":1}]},{"type":"verse","number":11,"content":[{"lineBreak":true},{"text":"But the king shall rejoice in God:","poem":1},{"lineBreak":true},{"text":"Every one that sweareth by him shall glory;","poem":1},{"lineBreak":true},{"text":"For the mouth of them that speak lies shall be stopped.","poem":1}]}],"footnotes":[]},"thisChapterLink":"/api/eng_asv/PSA/63.json","thisChapterAudioLinks":{},"nextChapterApiLink":"/api/eng_asv/PSA/64.json","nextChapterAudioLinks":{},"previousChapterApiLink":"/api/eng_asv/PSA/62.json","previousChapterAudioLinks":{},"numberOfVerses":11}